{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "outDir": "./dist/renderer",
    "target": "ESNext",
    "types": [
      "vite/client"
    ]
  },
  "exclude": [
    "src/main/**/*",
    "src/api/repoDetector.ts"
  ],
  "extends": "./tsconfig.json",
  "include": [
    "src/renderer/**/*",
    "src/shared/**/*",
    "src/api/**/*"
  ]
}